{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "@components": ["./src/library/components/index"],
      "@features/*": ["./src/features/*"],
      "@services": ["./src/library/services/index"],
      "@stores": ["src/stores/index"],
      "@utils": ["./src/library/utils/index"],
      "@routers": ["./src/routers"],
      "@assets/*": ["./src/library/assets/*"],
      "@localization": ["./src/localization/index"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["src"]
}
